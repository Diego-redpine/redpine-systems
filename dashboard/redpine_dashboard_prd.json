  "handoff_from_flask": {
    "description": "How onboarding passes data to dashboard",
    "method": "redirect_with_params",
    "flow": [
      "1. User completes onboarding chat in Flask",
      "2. Flask saves config to database or temp storage",
      "3. Flask redirects to: http://localhost:3000/preview?config_id=abc123",
      "4. Next.js fetches config and renders dashboard"
    ],
    "config_structure": {
      "id": "abc123",
      "business_name": "Bob's Cuts",
      "business_type": "barber",
      "visible_tabs": ["people", "time", "money", "comms"],
      "hidden_tabs": ["things", "tasks", "files"],
      "labels": {
        "people": "Clients"
      },
      "nav_style": "rounded",
      "nav_display": "icon_and_text",
      "modules_to_activate": ["contacts", "calendar", "account"]
    }
  }
