{
  "project": "Red Pine OS Dashboard",
  "location": "~/redpine-os/dashboard",
  "framework": "Next.js 14 with App Router",
  "styling": "Tailwind CSS",
  "description": "Interactive dashboard preview with collapsible chat, 7-category navigation, and payment flow",

  "design": {
    "theme": "neo-brutalist, clean, minimal",
    "colors": {
      "primary_red": "#ce0707",
      "background": "#ffffff",
      "sidebar_bg": "#fafafa",
      "text_primary": "#000000",
      "text_muted": "#6b7280",
      "border": "#e5e5e5",
      "locked_badge": "#9ca3af"
    },
    "nav_styles": {
      "rounded": "rounded-full px-4 py-2",
      "half_rounded": "rounded-lg px-4 py-2",
      "square": "rounded-none px-4 py-2"
    },
    "nav_display_modes": ["icon_only", "text_only", "icon_and_text"]
  },

  "navigation": {
    "structure": "single_sidebar_left",
    "sections": [
      {
        "id": "operations",
