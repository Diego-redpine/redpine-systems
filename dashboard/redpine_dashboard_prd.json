    {
      "id": 17,
      "name": "Connect to Odoo API",
      "description": "Fetch real data after payment, replace dummy data",
      "priority": "medium"
    },
    {
      "id": 18,
      "name": "Connect Flask onboarding to Next.js preview",
      "description": "Pass config from Flask to Next.js via redirect or API",
      "priority": "high"
    }
  ],

