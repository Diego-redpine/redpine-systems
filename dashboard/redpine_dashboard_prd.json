    {
      "id": 13,
      "name": "Implement chat edit functionality",
      "description": "Send edits, AI processes, updates config, re-renders dashboard",
      "priority": "high"
    },
    {
      "id": 14,
      "name": "Implement 3-edit limit",
      "description": "Track edits, show counter, trigger popup at limit",
      "priority": "high"
    },
    {
      "id": 15,
      "name": "Build save/launch popup",
      "description": "Modal with Save Design and Launch Now options",
