              "martial_arts": "Students & Instructors",
              "landscaping": "Customers & Crews",
              "restaurant": "Guests & Team"
            },
            "sub_items": ["Clients", "Leads", "Staff", "Vendors"],
            "odoo_modules": ["contacts", "crm", "hr"]
          },
          {
            "id": "things",
            "icon": "üì¶",
            "default_label": "Things",
            "examples_by_business": {
              "salon": "Products & Supplies",
              "restaurant": "Menu & Inventory",
              "ecommerce": "Products"
            },
            "sub_items": ["Products", "Inventory", "Equipment", "Assets"],
            "odoo_modules": ["stock", "product", "purchase"]
          },
          {
            "id": "time",
            "icon": "üïê",
            "default_label": "Time",
            "examples_by_business": {
              "salon": "Appointments",
              "martial_arts": "Class Schedule",
              "landscaping": "Job Schedule",
              "restaurant": "Reservations"
            },
            "sub_items": ["Calendar", "Appointments", "Schedules", "Shifts"],
            "odoo_modules": ["calendar", "hr_attendance", "planning"]
          },
          {
            "id": "money",
            "icon": "üí∞",
            "default_label": "Money",
            "examples_by_business": {
              "all": "Invoices & Payments"
            },
            "sub_items": ["Invoices", "Payments", "Expenses", "Payroll", "Estimates"],
            "odoo_modules": ["account", "sale_management", "hr_expense"]
          },
          {
            "id": "tasks",
            "icon": "‚úì",
            "default_label": "Tasks",
            "examples_by_business": {
              "landscaping": "Work Orders",
              "cleaning": "Job Tickets",
              "construction": "Projects"
            },
            "sub_items": ["To-dos", "Jobs", "Projects", "Workflows"],
            "odoo_modules": ["project", "project_todo"]
          },
          {
            "id": "comms",
            "icon": "üí¨",
            "default_label": "Comms",
            "examples_by_business": {
              "all": "Messages & Notes"
            },
            "sub_items": ["Messages", "Notes", "Announcements", "Reviews"],
            "odoo_modules": ["mail", "sms"]
          },
          {
            "id": "files",
            "icon": "üìÅ",
            "default_label": "Files",
            "examples_by_business": {
              "all": "Documents"
            },
            "sub_items": ["Documents", "Contracts", "Images", "Uploads"],
            "odoo_modules": ["documents"]
          }
        ]
      },
      {
        "id": "platform",
        "label": "Platform",
        "description": "Fixed items - always visible",
        "show_divider_above": true,
        "items": [
          {
            "id": "site",
            "icon": "üåê",
            "label": "Site",
            "description": "Website editor, booking page, online store",
            "locked": false,
            "sub_items": ["Pages", "Booking Widget", "Online Store", "Domain", "SEO"]
          },
          {
            "id": "analytics",
            "icon": "üìä",
            "label": "Analytics",
            "description": "Reports, insights, dashboards",
            "locked": false,
            "sub_items": ["Overview", "Revenue", "Clients", "Performance"]
          },
          {
            "id": "marketplace",
            "icon": "üè™",
            "label": "Marketplace",
            "description": "Hire help, buy templates, add-ons",
            "locked": true,
            "locked_message": "Coming Soon",
            "sub_items": ["Hire Help", "Templates", "Add-ons"]
          },
          {
            "id": "settings",
            "icon": "‚öôÔ∏è",
            "label": "Settings",
            "description": "Account, billing, integrations",
            "locked": false,
            "sub_items": ["Account", "Billing", "Integrations", "Team", "Customize Nav"]
          }
        ]
      }
    ]
  },

  "preview_mode": {
    "description": "User sees dashboard with dummy data before paying",
    "layout": {
      "chat_panel": {
        "position": "left",
        "width": "320px",
        "collapsible": true,
        "default_state": "collapsed"
      },
      "dashboard": {
        "position": "right",
        "width": "calc(100% - chat_width)",
        "when_chat_collapsed": "100%"
      }
    },
    "features": {
      "dummy_data": {
        "description": "Pre-populated fake data based on business type",
        "examples": {
          "salon": {
            "clients": ["Sarah Johnson", "Emily Chen", "Maria Garcia"],
            "appointments": ["Today 2pm - Sarah - Manicure", "Today 4pm - Emily - Pedicure"],
            "revenue": "$2,450 this week"
          }
        }
      },
      "interactive": true,
      "can_click_tabs": true,
      "can_view_all_sections": true
    },
    "edit_limit": {
      "free_edits": 3,
      "after_limit": {
        "show_popup": true,
        "options": [
          {"label": "Save Design", "action": "create_free_account", "description": "Come back later"},
          {"label": "Launch Now", "action": "stripe_checkout", "price": "$100/month"}
        ]
      }
    }
  },

  "chat_panel": {
    "description": "Collapsible chat on left side for edits",
    "states": {
      "collapsed": {
        "width": "60px",
        "shows": "chat icon + expand button"
      },
      "expanded": {
        "width": "320px",
        "shows": "full chat history + input"
      }
    },
    "features": {
      "continues_conversation": true,
      "edit_requests": [
        "Change People to Clients",
        "Add a Services section",
        "Hide the Tasks tab",
        "Make the nav icons only"
      ],
      "shows_edit_count": true,
      "format": "3 edits remaining"
    }
  },

  "customization_options": {
    "nav_style": {
      "options": ["rounded", "half_rounded", "square"],
      "changeable_via": "chat or settings"
    },
    "nav_display": {
      "options": ["icon_only", "text_only", "icon_and_text"],
      "changeable_via": "chat or settings"
    },
    "tab_labels": {
      "description": "Rename any tab",
      "example": "People ‚Üí Students",
      "changeable_via": "chat or settings"
    },
    "tab_visibility": {
      "description": "Show/hide tabs",
      "example": "Hide Tasks tab",
      "changeable_via": "chat or settings"
    }
  },

  "pages": {
    "preview": {
      "route": "/preview",
      "description": "Main preview page with chat + dashboard",
      "receives": "config from onboarding Flask app",
      "query_params": ["config_id", "business_type", "business_name"]
    },
    "dashboard": {
      "route": "/dashboard",
      "description": "Full dashboard after payment",
      "requires": "authentication"
    },
    "checkout": {
      "route": "/checkout",
      "description": "Stripe checkout page",
      "price": "$100/month"
    },
    "signup": {
      "route": "/signup",
      "description": "Free account creation to save design"
    }
  },

  "api_routes": {
    "get_config": {
      "route": "/api/config/[id]",
      "description": "Get saved configuration from onboarding"
    },
    "update_config": {
      "route": "/api/config/update",
      "method": "POST",
      "description": "Update config based on chat edits"
    },
    "chat": {
      "route": "/api/chat",
      "method": "POST",
      "description": "Send edit request, get AI response + updated config"
    },
    "checkout": {
      "route": "/api/checkout",
      "method": "POST",
      "description": "Create Stripe checkout session"
    }
  },

  "odoo_integration": {
    "description": "Dashboard pulls/pushes data to Odoo",
    "connection": {
      "url": "http://localhost:8069",
      "method": "XML-RPC",
      "database": "redpine_dev"
    },
    "operations": {
      "read": "Fetch contacts, invoices, calendar events",
      "write": "Create/update records",
      "configure": "Activate modules, set labels"
    }
  },

  "tasks": [
    {
      "id": 1,
      "name": "Initialize Next.js project",
